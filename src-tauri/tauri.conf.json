{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MCTier",
  "version": "1.3.0",
  "identifier": "com.mctier.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MCTier - Minecraft 虚拟局域网联机工具",
        "width": 320,
        "height": 520,
        "minWidth": 320,
        "minHeight": 400,
        "center": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false
      },
      "webviewInstallMode": {
        "type": "embedBootstrapper",
        "silent": true
      },
      "allowDowngrades": false,
      "wix": null
    },
    "externalBin": ["resources/binaries/easytier-core"],
    "resources": ["resources/binaries/*"],
    "copyright": "Copyright © 2024 MCTier Team",
    "category": "Game",
    "shortDescription": "Minecraft 虚拟局域网联机工具",
    "longDescription": "MCTier 是一款桌面应用程序，允许 Minecraft 玩家通过虚拟局域网（VLAN）技术实现跨物理网络的联机游戏。该应用集成了虚拟网络组建、实时语音通信和玩家状态管理功能，为玩家提供流畅的联机体验。"
  }
}
